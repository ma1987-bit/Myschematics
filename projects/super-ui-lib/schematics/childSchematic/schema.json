{
  "$schema": "http://json-schema.org/schema",
  "id": "MyDemoSchema",
  "title": "My Demo Schematics Schema",
  "type": "object",
  "properties": {
    "type": {
      "enum": [
        "header",
        "footer",
        "none"
      ],
      "x-prompt": "Which component would you like to use?"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": { "type": { "const": "header" } }
      },
      "then": {
        "properties": { "header": { 
          "path": {
            "type": "string",
            "format": "path",
            "description": "Where should be created the file",
            "x-prompt":"Where should be created the component ?",
            "default":"src/app"
          }
          

           } }
      }
    },
    {
      "if": {
        "properties": { "type": { "const": "footer" } }
      
      },
      "then": {
        "properties": { "footer": { "path": {
          "type": "string",
          "format": "path",
          "description": "Where should be created the file",
          "x-prompt":"Where should be created the component ?",
          "default":"src/app"
        }} }
      }
    },
    {
      "if": {
        "properties": { "type": { "const": "none" } }
       
      },
      "then": {
        "properties": { "none": { 
          "Message": "Thanks for using our components" } }
      }
    }
  ]
}